RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.+)$ index.php
RewriteRule ^(accueil)$ views/front/accueil.views.php
RewriteRule ^(login)$ login.views.php
RewriteRule ^(signup)$ views/front/signup.views.php
RewriteRule ^(projet2022)$ views/front/projet2022.views.php
RewriteRule ^(eleves)$ views/front/eleves.views.php
RewriteRule ^(membres)$ views/front/membres.views.php
RewriteRule ^(deconnexion)$ views/front/deconnexion.views.php


ErrorDocument 301 http://www.acb92.com/index.php/?page=error301
ErrorDocument 302 http://www.acb92.com/index.php/?page=error302
ErrorDocument 400 http://www.acb92.com/index.php/?page=error400
ErrorDocument 401 http://www.acb92.com/index.php/?page=error401
ErrorDocument 402 http://www.acb92.com/index.php/?page=error402
ErrorDocument 403 http://www.acb92.com/index.php/?page=error403
ErrorDocument 404 http://www.acb92.com/index.php/?page=error404
ErrorDocument 405 http://www.acb92.com/index.php/?page=error405
ErrorDocument 500 http://www.acb92.com/index.php/?page=error500
ErrorDocument 505 http://www.acb92.com/index.php/?page=error505


Options All -Indexes
ServerSignature Off
Options +FollowSymLinks
AddDefaultCharset UTF-8

#Protection XSS, clickJacking et Mime-Type
<ifModule mod_headers.c>
Header set X-XSS-Protection "1; mode=block"
Header always append X-Frame-Options SAMEORIGIN
Header set X-Content-Type-Options: "nosniff‚Äù
</ifModule>

# protection contre les injections de fichiers
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=http:// [OR]
RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=(\.\.//?)+ [OR]
RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=/([a-z0-9_.]//?)+ [NC]
RewriteRule .* - [F]